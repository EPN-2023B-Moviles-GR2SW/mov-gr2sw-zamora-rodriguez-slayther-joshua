<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxWidth="850px">

    <ImageView
        android:id="@+id/cuentaBox"
        android:layout_width="288dp"
        android:layout_height="145dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/boxradius" />

    <TextView
        android:id="@+id/tv_cuenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NombreCuenta"
        android:textColor="#0c1832"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/cuentaBox"
        app:layout_constraintEnd_toEndOf="@+id/cuentaBox"
        app:layout_constraintHorizontal_bias="0.106"
        app:layout_constraintStart_toStartOf="@+id/cuentaBox"
        app:layout_constraintTop_toTopOf="@+id/cuentaBox"
        app:layout_constraintVertical_bias="0.126" />

    <TextView
        android:id="@+id/tv_nCuenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="N.Cuenta"
        android:textColor="#0c1832"
        app:layout_constraintEnd_toEndOf="@+id/tv_cuenta"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_cuenta"
        app:layout_constraintTop_toBottomOf="@+id/tv_cuenta" />

    <TextView
        android:id="@+id/tv_saldoD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Saldo"
        android:textColor="#0c1832"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tv_saldo1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_saldo1"
        app:layout_constraintTop_toBottomOf="@+id/tv_saldo1" />

    <TextView
        android:id="@+id/tv_tipoCuenta"
        android:layout_width="89dp"
        android:layout_height="37dp"
        android:text="Tipo.Cuenta"
        app:layout_constraintBottom_toBottomOf="@+id/cuentaBox"
        app:layout_constraintEnd_toEndOf="@+id/cuentaBox"
        app:layout_constraintHorizontal_bias="0.908"
        app:layout_constraintStart_toStartOf="@+id/cuentaBox"
        app:layout_constraintTop_toTopOf="@+id/cuentaBox"
        app:layout_constraintVertical_bias="0.772" />

    <TextView
        android:id="@+id/tv_saldo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Saldo disponible"
        android:textColor="#0c1832"
        app:layout_constraintEnd_toEndOf="@+id/tv_nCuenta"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_nCuenta"
        app:layout_constraintTop_toBottomOf="@+id/tv_nCuenta" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/cuentaBox"
        app:layout_constraintEnd_toEndOf="@+id/cuentaBox"
        app:layout_constraintHorizontal_bias="0.616"
        app:layout_constraintStart_toStartOf="@+id/cuentaBox"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.135"
        app:srcCompat="@android:drawable/star_off" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cta. Favorita"
        app:layout_constraintBottom_toBottomOf="@+id/imageView8"
        app:layout_constraintStart_toEndOf="@+id/imageView8"
        app:layout_constraintTop_toTopOf="@+id/imageView8" />
</androidx.constraintlayout.widget.ConstraintLayout>